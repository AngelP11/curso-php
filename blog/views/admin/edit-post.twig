{% extends 'layout.twig' %}

{% block title %}
    New Post
{% endblock %}

{% block content %}
	<p>
		<a class="btn" href="{{ 'admin/posts' | url }}" >Back</a>
	</p>

	{% if errors %}
		{% include('partials/errors.twig') %}
	{%  endif %}

	{% if result == true %}
		<div class="alert alert-success">Cambio guardado</div>
	{% endif %}

	<form action="{{ 'admin/posts/edit/' | url }}{{ blogPost.id }}" method="POST">
		<div class="form-group">
			<label for="title">Title</label>
			<input class="form-control" type="text" name="title" id="title" value="{{ blogPost.title }}">
		</div>

		<div class="form-group">
			<label for="img_url">URL Image</label>
			<input class="form-control" name="img_url" id="img_url" value="{{ blogPost.img_url }}"></input>
		</div>

		<div class="form-group">
			<label for="content">Content</label>
			<textarea class="form-control" name="content" id="content">
				{{ blogPost.content }}
			</textarea>
		</div>
		
		<input class="btn btn-primary" type="submit" name="submit" value="Save">
	</form>
{% endblock %}