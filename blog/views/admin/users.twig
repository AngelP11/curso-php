{% extends 'layout.twig' %}

{% block title %}
    Manage Users
{% endblock %}

{% block content %}
	<p>
		<a href="{{ 'admin/users/create' | url }}">New User</a>
	</p>
    <table class='table'>
    	<thead>
    		<tr>
    			<th>#</th>
    			<th>Name</th>
                <th>Email</th>
    			<th>Edit</th>
    			<th>Delete</th>
    		</tr>
    	</thead>
    	<tbody>
    		{% for user in users %}
    			<tr>
    				<td>{{ user.id }}</td>
    				<td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
    				<td>Edit</td>
    				<td>Delete</td>
    			</tr>
    		{% endfor %}
    	</tbody>
    </table>
{% endblock %}